{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "bash": {
            "typst *": "allow"
        }
    },
    "lsp": {
        "tinymist": {
            "command": [
                "tinymist"
            ],
            "extensions": [
                ".typ"
            ]
        }
    },
    "formatter": {
        "typstyle": {
            "command": [
                "typstyle",
                "-i",
                "$FILE"
            ],
            "extensions": [
                ".typ"
            ]
        }
    }
}
